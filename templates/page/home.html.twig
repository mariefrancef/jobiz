{% extends 'base.html.twig' %}

{% block title %}Accueil - Jobiz{% endblock %}

{% block body %}
<h1 class="text-center text-3xl font-bold my-8">Dernières offres d'emploi</h1>

<div class="max-w-6xl mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  {% for job in latestJobs %}
    <div class="bg-white rounded-lg shadow p-6 flex flex-col">
      <h2 class="text-xl font-semibold text-teal-600 mb-2">{{ job.title }}</h2>
      <p class="text-gray-700 mb-1">{{ job.company.name }}</p>
      <p class="text-gray-600 mb-1">{{ job.city }}, {{ job.country }}</p>
      <p class="text-gray-600 mb-2">Type : {{ job.jobType.name }}</p>
      <a href="{{ path('app_job_show', {'id': job.id}) }}" class="mt-auto inline-block text-teal-700 hover:text-teal-900 font-semibold">Plus d'infos →</a>
    </div>
  {% else %}
    <p class="col-span-full text-center text-gray-500">Aucune offre disponible pour le moment.</p>
  {% endfor %}
</div>
{% endblock %}